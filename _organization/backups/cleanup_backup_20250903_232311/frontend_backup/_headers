# BGAPP - Headers para Cloudflare Pages
# Configuração de segurança e performance

# Headers globais
/*
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  X-XSS-Protection: 1; mode=block
  Access-Control-Allow-Origin: *
  Content-Encoding: gzip
  Accept-Encoding: gzip, deflate, br

# Permitir iframes para páginas específicas do BGAPP
/realtime_angola.html
  X-Frame-Options: ALLOWALL
  
/realtime_angola
  X-Frame-Options: ALLOWALL

/dashboard_cientifico.html
  X-Frame-Options: ALLOWALL
  
/dashboard_cientifico
  X-Frame-Options: ALLOWALL

/mobile_pwa.html
  X-Frame-Options: ALLOWALL
  
/mobile_pwa
  X-Frame-Options: ALLOWALL

/mobile.html
  X-Frame-Options: ALLOWALL
  
/mobile
  X-Frame-Options: ALLOWALL

/health_dashboard.html
  X-Frame-Options: ALLOWALL
  
/health_dashboard
  X-Frame-Options: ALLOWALL

# Assets estáticos - cache longo
/BGAPP/assets/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

/BGAPP/static/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Arquivos de imagem
/BGAPP/*.png
  Cache-Control: public, max-age=86400
  
/BGAPP/*.jpg
  Cache-Control: public, max-age=86400
  
/BGAPP/*.ico
  Cache-Control: public, max-age=86400

# Arquivos HTML - cache curto
/BGAPP/*.html
  Cache-Control: public, max-age=300
  
# Service Worker - sem cache
/BGAPP/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Manifest PWA
/BGAPP/manifest.json
  Cache-Control: public, max-age=86400
  Content-Type: application/manifest+json

# API endpoints
/api/*
  Cache-Control: public, max-age=300
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization
