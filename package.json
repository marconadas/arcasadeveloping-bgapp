{
  "name": "bgapp-scientific-dashboard",
  "version": "2.0.0",
  "description": "BGAPP - Advanced Scientific Dashboard with Unreal Engine & deck.gl integration",
  "main": "infra/frontend/index.html",
  "scripts": {
    "start": "python -m http.server 8000 --directory infra/frontend",
    "dev": "python -m http.server 8080 --directory infra/frontend",
    "build": "echo 'Building BGAPP...' && npm run optimize",
    "optimize": "node scripts/optimize-assets.js",
    "deploy": "wrangler pages deploy infra/frontend --project-name bgapp-frontend",
    "test": "python -m pytest tests/",
    "lint": "eslint infra/frontend/assets/js/",
    "format": "prettier --write infra/frontend/assets/"
  },
  "dependencies": {
