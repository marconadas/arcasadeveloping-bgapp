    "@deck.gl/aggregation-layers": "^9.1.14",
    "@deck.gl/mesh-layers": "^9.1.14",
    "@deck.gl/extensions": "^9.1.14",
    "@deck.gl/json": "^9.1.14",
    "@loaders.gl/core": "^4.2.0",
    "@loaders.gl/csv": "^4.2.0",
    "@loaders.gl/json": "^4.2.0",
    "@math.gl/core": "^4.0.0",
    "@math.gl/web-mercator": "^4.0.0",
    "three": "^0.160.0",
    "mapbox-gl": "^3.0.0",
