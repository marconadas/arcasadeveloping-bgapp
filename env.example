# BGAPP - Configuração de Ambiente
# Copie este arquivo para .env e configure as variáveis

# =============================================================================
# AMBIENTE E DEBUG
# =============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME=BGAPP
APP_VERSION=1.1.0

# =============================================================================
# SEGURANÇA JWT
# =============================================================================
# IMPORTANTE: Mude esta chave em produção!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS E RATE LIMITING
# =============================================================================
# URLs permitidas (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:8085,http://localhost:3000,http://127.0.0.1:8085
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Authorization,Content-Type,Accept

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# BASE DE DADOS POSTGRESQL
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=geo
POSTGRES_USERNAME=postgres
# IMPORTANTE: Mude a password em produção!
POSTGRES_PASSWORD=your-secure-postgres-password

# Connection Pool
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# =============================================================================
# SERVIÇOS EXTERNOS - COPERNICUS
# =============================================================================
# Credenciais do Copernicus Marine Service
COPERNICUS_USERNAME=your-copernicus-username
COPERNICUS_PASSWORD=your-copernicus-password

# =============================================================================
# INTEGRAÇÃO CARTO
# =============================================================================
# Configurações para integração com CARTO API
CARTO_BASE_URL=https://majearcasa.carto.com
CARTO_USERNAME=majearcasa
CARTO_API_KEY=your-carto-api-key-here
CARTO_SYNC_INTERVAL=3600

# =============================================================================
# MINIO (ARMAZENAMENTO DE OBJETOS)
# =============================================================================
MINIO_ENDPOINT=localhost:9000
# IMPORTANTE: Mude as credenciais em produção!
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_SECURE=false

# =============================================================================
# NGROK (ACESSO REMOTO)
# =============================================================================
NGROK_AUTHTOKEN=your-ngrok-auth-token

# =============================================================================
# APIS EXTERNAS
# =============================================================================
OBIS_API_URL=https://api.obis.org
GBIF_API_URL=https://api.gbif.org/v1
ERDDAP_API_URL=https://coastwatch.pfeg.noaa.gov/erddap

# =============================================================================
# CONFIGURAÇÃO DAS APIS
# =============================================================================
ADMIN_API_HOST=0.0.0.0
ADMIN_API_PORT=8000

METOCEAN_API_HOST=0.0.0.0
METOCEAN_API_PORT=5080

PYGEOAPI_HOST=0.0.0.0
PYGEOAPI_PORT=5080

FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=8085

# Limites da API
MAX_PAGE_SIZE=1000
DEFAULT_PAGE_SIZE=100
MAX_QUERY_COMPLEXITY=10

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/bgapp.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# Tipos de logging
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_SECURITY_LOGGING=true

# =============================================================================
# CAMINHOS DE DADOS
# =============================================================================
DATA_DIR=data
CONFIG_DIR=configs
LOGS_DIR=logs
TIMEZONE=UTC
